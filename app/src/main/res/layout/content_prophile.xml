<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_prophile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.google.firebase.codelab.friendlychat.ProphileActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_prophile">


    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <FrameLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewDrawerAvatar0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|bottom"
            android:src="@drawable/image_view_gender_selector"
             />


        <!--<ImageView-->
            <!--android:id="@+id/imageViewDrawerAvatar0"-->
            <!--android:layout_width="73dp"-->
            <!--android:layout_height="75dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_gravity="center|bottom"-->
            <!--android:background="@drawable/image_view_gender_selector"-->
            <!--android:scaleType="centerInside" />-->

        <ImageButton
            android:id="@+id/imageButtonDrawerIntentPhoto0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/menu_photo" />

    </FrameLayout>

    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewDrawerAvatar1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|bottom"
            android:src="@drawable/image_view_gender_selector"
             />

        <ImageButton
            android:id="@+id/imageButtonDrawerIntentPhoto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@drawable/menu_photo" />

    </FrameLayout>

        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewDrawerAvatar2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/image_view_gender_selector"
                 />

            <ImageButton
                android:id="@+id/imageButtonDrawerIntentPhoto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/menu_photo" />

        </FrameLayout>

    </LinearLayout>



    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewDrawerAvatar3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/image_view_gender_selector"
                 />

            <ImageButton
                android:id="@+id/imageButtonDrawerIntentPhoto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/menu_photo" />

        </FrameLayout>

        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewDrawerAvatar4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/image_view_gender_selector"
               />

            <ImageButton
                android:id="@+id/imageButtonDrawerIntentPhoto4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/menu_photo" />

        </FrameLayout>

        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewDrawerAvatar5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/image_view_gender_selector"
                 />

            <ImageButton
                android:id="@+id/imageButtonDrawerIntentPhoto5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/menu_photo" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextProfileActivityName"
            android:hint="Enter Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextProfileActivityAge"
            android:hint="Enter Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:text="Send"
            android:id="@+id/sendAboutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="About me"
        android:id="@+id/aboutMeEditText" />

    </LinearLayout>

    <TextView
        android:textSize="14sp"
        android:id="@+id/aboutMeTextView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
